{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/admin-data",
      "dest": "api/index.py"
    },
    {
      "src": "/admin-users", 
      "dest": "api/index.py"
    },
    {
      "src": "/admin-environment", 
      "dest": "api/index.py"
    },
    {
      "src": "/frontend/(admin-.*\\.html)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "VERCEL": "1"
  }
}
